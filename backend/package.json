{
  "name": "funtoa-backend",
  "version": "1.0.0",
  "description": "Backend API pour le systÃ¨me de gestion FUNTOA SMIE",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "start:silent": "node index.js > /dev/null 2>&1",
    "dev": "nodemon index.js",
    "dev:silent": "nodemon index.js > /dev/null 2>&1",
    "migrate": "node scripts/run_migrations.js",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "express",
    "mysql",
    "authentication",
    "funtoa"
  ],
  "author": "ILO DEV",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.5",
    "prom-client": "^14.2.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ]
  }
}
